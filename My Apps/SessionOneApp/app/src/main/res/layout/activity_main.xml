<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android"
    tools:context="com.example.mannarelkady.sessiononeapp.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Your message!"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="26sp"
            android:textColor="#ffff"
            android:layout_margin="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messagess"
            android:hint="Add your text here"
            android:textColorHint="#ffff"
            android:textColor="@color/MyFav"
            android:lines="4" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:onClick="saveMessage"
            android:text="Send" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textmess"
            android:text="Nothing Yet"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="26sp"
            android:textColor="#ffff"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:onClick="showMessage"
            android:text="Show Message" />

    </LinearLayout>
</ScrollView>
